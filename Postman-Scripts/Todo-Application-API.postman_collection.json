							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"All todos are not completed\", function () {",
							"    const responseJson = pm.response.json();",
							"    responseJson.forEach(function(todo) {",
							"        pm.expect(todo.completed).to.eql(false);",
							"    });",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/todos/status?completed=false",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"todos",
						"status"
					],
					"query": [
						{
							"key": "completed",
							"value": "false"
						}
					]
				}
			}
		},
		{
			"name": "Search Todos",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Search results contain search term\", function () {",
