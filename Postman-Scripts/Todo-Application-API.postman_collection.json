		{
			"name": "Get Todos by Status - Completed",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"All todos are completed\", function () {",
							"    const responseJson = pm.response.json();",
							"    responseJson.forEach(function(todo) {",
							"        pm.expect(todo.completed).to.eql(true);",
							"    });",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/todos/status?completed=true",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"todos",
						"status"
					],
					"query": [
						{
							"key": "completed",
							"value": "true"
						}
					]
				}
			}
		},
		{
			"name": "Get Todos by Status - Active",
			"event": [
